procedure _setRX_2  (state: uint8_t); begin LATB5_bit := state; end;
procedure _setTX_2  (state: uint8_t); begin LATB4_bit := state; end;
procedure _setSCL_2 (state: uint8_t); begin LATD6_bit := state; end;
procedure _setSDA_2 (state: uint8_t); begin LATD5_bit := state; end;

function _gpioInit_1(pin: T_mikrobus_pin; direction: T_gpio_dir) : T_mikrobus_ret;
begin
Result := 0;
    case pin of
        _MIKROBUS_AN_PIN    : begin TRISA0_bit := direction; ANSELA0_bit := 0; end;
        _MIKROBUS_RST_PIN   : begin TRISG3_bit := direction; ANSELG3_bit := 0; end;
        _MIKROBUS_CS_PIN    : begin TRISD0_bit := direction; ANSELD0_bit := 0; end;
        _MIKROBUS_SCK_PIN   : begin TRISC3_bit := direction;                   end;
        _MIKROBUS_MISO_PIN  : begin TRISC4_bit := direction;                   end;
        _MIKROBUS_MOSI_PIN  : begin TRISC5_bit := direction;                   end;
        _MIKROBUS_PWM_PIN   : begin TRISC2_bit := direction;                   end;
        _MIKROBUS_INT_PIN   : begin TRISB2_bit := direction; ANSELB2_bit := 0; end;
        _MIKROBUS_RX_PIN    : begin TRISG2_bit := direction; ANSELG2_bit := 0; end;
        _MIKROBUS_TX_PIN    : begin TRISG7_bit := direction; ANSELG7_bit := 0; end;
        _MIKROBUS_SCL_PIN   : begin TRISD6_bit := direction; ANSELD6_bit := 0; end;
        _MIKROBUS_SDA_PIN   : begin TRISD5_bit := direction; ANSELD5_bit := 0; end    
    else
        Result := _MIKROBUS_ERR_PIN;
    end;
end;

function _gpioInit_2(pin: T_mikrobus_pin; direction: T_gpio_dir) : T_mikrobus_ret;
begin
Result := 0;
    case pin of
        _MIKROBUS_AN_PIN    : begin TRISA1_bit := direction; ANSELA1_bit := 0; end;
        _MIKROBUS_RST_PIN   : begin TRISG4_bit := direction; ANSELG4_bit := 0; end;
        _MIKROBUS_CS_PIN    : begin TRISH2_bit := direction;                   end;
        _MIKROBUS_SCK_PIN   : begin TRISC3_bit := direction;                   end;
        _MIKROBUS_MISO_PIN  : begin TRISC4_bit := direction;                   end;
        _MIKROBUS_MOSI_PIN  : begin TRISC5_bit := direction;                   end;
        _MIKROBUS_PWM_PIN   : begin TRISC6_bit := direction;                   end;
        _MIKROBUS_INT_PIN   : begin TRISB3_bit := direction; ANSELB3_bit := 0; end;
        _MIKROBUS_RX_PIN    : begin TRISB5_bit := direction; ANSELB5_bit := 0; end;
        _MIKROBUS_TX_PIN    : begin TRISB4_bit := direction; ANSELB4_bit := 0; end;
        _MIKROBUS_SCL_PIN   : begin TRISD6_bit := direction; ANSELD6_bit := 0; end;
        _MIKROBUS_SDA_PIN   : begin TRISD5_bit := direction; ANSELD5_bit := 0; end    
    else
        Result := _MIKROBUS_ERR_PIN;
    end;
end;

end.