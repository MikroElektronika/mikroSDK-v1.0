const _MIKROBUS_SCK_PIN  : byte = 3;
const _MIKROBUS_MISO_PIN : byte = 4;
const _MIKROBUS_MOSI_PIN : byte = 5;
const _MIKROBUS_PWM_PIN  : byte = 6;
const _MIKROBUS_INT_PIN  : byte = 7;
const _MIKROBUS_RX_PIN   : byte = 8;
const _MIKROBUS_TX_PIN   : byte = 9;
const _MIKROBUS_SCL_PIN  : byte = 10;
const _MIKROBUS_SDA_PIN  : byte = 11;

// ----------------------------------------------------------- SYSTEM SPECIFIC /

function  _getAN_1  () : uint8_t;     begin Result := PORTA.B0; end;
function  _getRST_1 () : uint8_t;     begin Result := PORTG.B3; end;
function  _getCS_1  () : uint8_t;     begin Result := PORTD.B0; end;
function  _getSCK_1 () : uint8_t;     begin Result := PORTC.B3; end;
function  _getMISO_1() : uint8_t;     begin Result := PORTC.B4; end;
function  _getMOSI_1() : uint8_t;     begin Result := PORTC.B5; end;
function  _getPWM_1 () : uint8_t;     begin Result := PORTC.B2; end;
function  _getINT_1 () : uint8_t;     begin Result := PORTB.B2; end;
function  _getRX_1  () : uint8_t;     begin Result := PORTG.B2; end;
function  _getTX_1  () : uint8_t;     begin Result := PORTG.B7; end;
function  _getSCL_1 () : uint8_t;     begin Result := PORTD.B6; end;
function  _getSDA_1 () : uint8_t;     begin Result := PORTD.B5; end;
procedure _setAN_1  (state: uint8_t); begin LATA0_bit := state; end;
procedure _setRST_1 (state: uint8_t); begin LATG3_bit := state; end;
procedure _setCS_1  (state: uint8_t); begin LATD0_bit := state; end;
procedure _setSCK_1 (state: uint8_t); begin LATC3_bit := state; end;
procedure _setMISO_1(state: uint8_t); begin LATC4_bit := state; end;
procedure _setMOSI_1(state: uint8_t); begin LATC5_bit := state; end;
procedure _setPWM_1 (state: uint8_t); begin LATC2_bit := state; end;
procedure _setINT_1 (state: uint8_t); begin LATB2_bit := state; end;
procedure _setRX_1  (state: uint8_t); begin LATG2_bit := state; end;
procedure _setTX_1  (state: uint8_t); begin LATG7_bit := state; end;
procedure _setSCL_1 (state: uint8_t); begin LATD6_bit := state; end;
procedure _setSDA_1 (state: uint8_t); begin LATD5_bit := state; end;

function  _getAN_2  () : uint8_t;     begin Result := PORTA.B1; end;
function  _getRST_2 () : uint8_t;     begin Result := PORTG.B4; end;
function  _getCS_2  () : uint8_t;     begin Result := PORTH.B2; end;
function  _getSCK_2 () : uint8_t;     begin Result := PORTC.B3; end;
function  _getMISO_2() : uint8_t;     begin Result := PORTC.B4; end;
function  _getMOSI_2() : uint8_t;     begin Result := PORTC.B5; end;
function  _getPWM_2 () : uint8_t;     begin Result := PORTC.B6; end;
function  _getINT_2 () : uint8_t;     begin Result := PORTB.B3; end;
function  _getRX_2  () : uint8_t;     begin Result := PORTB.B5; end;
function  _getTX_2  () : uint8_t;     begin Result := PORTB.B4; end;
function  _getSCL_2 () : uint8_t;     begin Result := PORTD.B6; end;
function  _getSDA_2 () : uint8_t;     begin Result := PORTD.B5; end;
